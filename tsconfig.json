
{
  "compilerOptions": {
    "experimentalDecorators": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "typeRoots": ["../node_modules/@types", "../@types"]
  },
  "exclude": ["node_modules", "local_modules", "babel.config.js", "metro.config.js", "jest.config.js"]
}
